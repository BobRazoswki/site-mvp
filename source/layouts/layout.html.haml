!!!
%html
  %head
    = stylesheet_link_tag "all"
    = partial :"analytics_scripts"
    %script{src: "//use.typekit.net/fla8fba.js"}
    :javascript
      try{Typekit.load();}catch(e){}
    %meta{charset: "utf-8"}/
    %meta{content: "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    = display_meta_tags site: "Makers Academy - Learn to code in 12 weeks"
    = partial :"social_media_meta"
    %link{href: image_path("favicons/favicon-32x32.png"), rel: "icon", sizes: "32x32", type: "image/png"}/
    %link{href: image_path("favicons/favicon-96x96.png"), rel: "icon", sizes: "96x96", type: "image/png"}/
    %link{href: image_path("favicons/favicon-16x16.png"), rel: "icon", sizes: "16x16", type: "image/png"}/
    = javascript_include_tag  "hooks"
  %body{class: page_classes}
    - # Tag manager must go in the body, the other analytics scripts go in the head
    = partial :"google_tag_manager"
    = partial :"navigation"
    = partial :"facebook_sdk"
    = yield

    = partial :"footer"

    = javascript_include_tag  "all"

    - if config.show_baseline_grid
      %script{:src => "http://files.keyes.ie/things/baseliner/baseliner-latest.min.js"}
        :cdata
      :javascript
        window.onload = function() {
            var baseliner = new Baseliner(27);
            baseliner.toggle();
        }
